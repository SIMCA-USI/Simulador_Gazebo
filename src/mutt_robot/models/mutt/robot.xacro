<?xml version="1.0"?>
<robot name="mutt_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===================== -->
  <!--   PROPIEDADES BASE    -->
  <!-- ===================== -->
  <xacro:property name="base_width" value="1.6"/>
  <xacro:property name="base_length" value="1.3"/>
  <xacro:property name="base_height" value="2.6"/>
  <!-- Realmente son 600 kg, se cambia para pruebas-->
  <xacro:property name="base_mass" value="50"/> 

  <!-- RUEDAS -->
  <xacro:property name="wheel_radius" value="0.30"/>
  <xacro:property name="wheel_width"  value="0.30"/>
  <xacro:property name="wheel_ygap"   value="0.50"/>
  <xacro:property name="wheel_zoff"   value="0.0"/>
  <xacro:property name="wheel_xoff"   value="0.70"/>

  <!-- SENSORES -->
  <xacro:property name="camera_x" value="1.00"/>
  <xacro:property name="camera_y" value="0.00"/>
  <xacro:property name="camera_z" value="0.75"/>

  <xacro:property name="lidar_x" value="-0.50"/>
  <xacro:property name="lidar_y" value="0.00"/>
  <xacro:property name="lidar_z" value="1.40"/>

  <xacro:property name="imu_x" value="-0.50"/>
  <xacro:property name="imu_y" value="0.20"/>
  <xacro:property name="imu_z" value="0.70"/>

  <xacro:property name="gps_x" value="0.0"/>
  <xacro:property name="gps_y" value="0.0"/>
  <xacro:property name="gps_z" value="0.70"/>

  <!-- ===================== -->
  <!--     MACROS INERCIA    -->
  <!-- ===================== -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12)*(h*h + d*d)}"
               iyy="${(m/12)*(w*w + d*d)}"
               izz="${(m/12)*(w*w + h*h)}"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12)*(3*r*r + h*h)}"
               iyy="${(m/12)*(3*r*r + h*h)}"
               izz="${(m/2)*(r*r)}"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </xacro:macro>


<!-- ===================== -->
  <!--    BASE FOOTPRINT     -->
  <!-- ===================== -->
  <link name="base_footprint"/>

  <!-- ===================== -->
  <!--       BODY LINK       -->
  <!-- ===================== -->
    <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
      <geometry>
        <mesh filename="package://mutt_robot/models/mutt/meshes/mutt_full.stl" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
        <geometry>
          <box size="${base_height} ${base_width} ${base_length}"/>
        </geometry>
        <origin xyz="0.0 0.0 0.5" rpy="0 0 0"/>  
      </collision>

    <xacro:box_inertia m="${base_mass}" w="${base_width}" h="${base_height}" d="${base_length}"/>
  </link>


  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


  <!-- ===================== -->
  <!--        RUEDAS         -->
  <!-- ===================== -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="15.0" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child  link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2 + wheel_ygap)} ${-wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="10"/>
      <dynamics damping="1.0" friction="1.0"/>
    </joint>
  </xacro:macro>

  <!-- Instanciar ruedas -->
  <xacro:wheel prefix="drivewhl_tl" x_reflect="1"  y_reflect="0.5"/>
  <xacro:wheel prefix="drivewhl_tr" x_reflect="1"  y_reflect="-0.5"/>
  <xacro:wheel prefix="drivewhl_bl" x_reflect="-1" y_reflect="0.5"/>
  <xacro:wheel prefix="drivewhl_br" x_reflect="-1" y_reflect="-0.5"/>

  <!-- ===================== -->
  <!--   SENSORES SEPARADOS  -->
  <!-- ===================== -->

  <!-- CAMERA MODULE -->
  <xacro:macro name="camera_module" params="x y z r p yaw parent">
    <link name="camera_link">
      <visual>
        <geometry><box size="0.05 0.05 0.05"/></geometry>
      </visual>
    </link>
    <joint name="camera_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="camera_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${yaw}"/>
    </joint>
  </xacro:macro>

  <!-- LIDAR MODULE -->
  <xacro:macro name="lidar_module" params="x y z r p yaw parent">
    <link name="lidar_link">
      <visual>
        <geometry><cylinder radius="0.04" length="0.06"/></geometry>
      </visual>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="lidar_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${yaw}"/>
    </joint>
  </xacro:macro>

  <!-- IMU MODULE -->
  <xacro:macro name="imu_module" params="x y z r p yaw parent">
    <link name="imu_link">
      <visual>
        <geometry><box size="0.04 0.04 0.04"/></geometry>
      </visual>
    </link>
    <joint name="imu_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="imu_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${yaw}"/>
    </joint>
  </xacro:macro>

  <!-- GPS MODULE -->
  <xacro:macro name="gps_module" params="x y z r p yaw parent">
    <link name="gps_link">
      <visual>
        <geometry><sphere radius="0.03"/></geometry>
      </visual>
    </link>
    <joint name="gps_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="gps_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${yaw}"/>
    </joint>
  </xacro:macro>

  <!-- Instantiate modules -->
  <xacro:camera_module x="${camera_x}" y="${camera_y}" z="${camera_z}" r="0" p="0" yaw="0" parent="base_link"/>
  <xacro:lidar_module  x="${lidar_x}"  y="${lidar_y}"  z="${lidar_z}"  r="0" p="0" yaw="0" parent="base_link"/>
  <xacro:imu_module    x="${imu_x}"    y="${imu_y}"    z="${imu_z}"    r="0" p="0" yaw="0" parent="base_link"/>
  <xacro:gps_module    x="${gps_x}"    y="${gps_y}"    z="${gps_z}"    r="0" p="0" yaw="0" parent="base_link"/>

  <!-- ARCHIVOS ADICIONALES -->
  <xacro:include filename="$(find mutt_robot)/models/mutt/robot.gazebo" />

</robot>
